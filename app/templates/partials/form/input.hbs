<div class="form-field{{#if field-class}} {{field-class}}{{/if}}{{#if error}} form-error{{/if}}">
  {{#if field-label}}
    <label {{#if field-id}}for="{{field-id}}"{{/if}}
           class="form-field__label{{#if field-label-class}} {{field-label-mode}}{{/if}}">{{field-label}}</label>
  {{/if}}
  <input type="{{#if type}}{{type}}{{else}}text{{/if}}"
         class="form-field__input {{input-class}}"
    {{#if field-id}} id="{{field-id}}"{{/if}}
    {{#if field-name}} name="{{field-name}}"{{/if}}
    {{#if placeholder}} placeholder="{{placeholder}}"{{/if}}
    {{#if inputmode}} inputmode="{{inputmode}}"{{/if}}
    {{#if aria-label}} aria-label="{{aria-label}}"{{/if}}
    {{#if disabled}} disabled aria-disabled="true"{{/if}}/>
  {{#if error}}<span class="form-field__message">{{error}}</span>{{/if}}
</div>