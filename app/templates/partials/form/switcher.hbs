<div class="form-switcher{{#if field-class}} {{field-class}}{{/if}}">
  <input type="checkbox"
         class="form-switcher__input"
    {{#if field-id}} id="{{field-id}}"{{/if}}
    {{#if checked}} checked{{/if}}
    {{#if aria-label}} aria-label="{{aria-label}}"{{/if}}
    {{#if disabled}} disabled aria-disabled="true"{{/if}}>
  <label class="form-switcher__label" {{#if field-id}}for="{{field-id}}"{{/if}}>
    <span></span>
  </label>
</div>